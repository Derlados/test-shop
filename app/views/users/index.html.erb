<div class="storage">
    <%= params[:search]%>
    <h1 class="table__title">List of users in the system</h1>
    <ul class="table__list">
        <% @users.each do |user|%>
            <li class="table__item rlc">
                <div class="table__row-block rlc">
                    <div class="table__text table__text_bold">#<%= user.id %></div>
                    <div class="table__text"><%= user.first_name + " " + user.last_name%></div>
                </div>
                <div class="table__row-block rlc">
                    <div class="table__price"><%= user.role %></div>
                </div>
                <%= link_to "Редактировать", edit_user_path(user), {class: "table__btn"} %>
            </li>
        <% end %>
    </ul>
</div>
